(defwidget panel_launcher []
    (button
        :class "launcher_button"
        (image :path "${EWW_CONFIG_DIR}/assets/icons/cross.svg")
    )
)

(defwidget panel_workspaces []
    (box :class "workspaces"
       :orientation "h"
       :space-evenly false
       :halign "start"
       :spacing 12
       (for ws in workspace_list
            (button
                :class {active_workspace == ws ? "active" : "inactive"}
                :onclick "hyprctl dispatch workspace ${ws}"
            )
       )
    )
)

(defwidget panel_clock []
    (box :class "clock_box"
        (label  :text clock_label)
    )
)

(defwidget panel_battery []
    (box :class "battery_box"
        (image 
            :path {EWW_BATTERY.BAT1.status == "Charging" ? "${EWW_CONFIG_DIR}/assets/icons/battery/battery-charging.svg" : 
            EWW_BATTERY.BAT1.capacity == 100 ? "${EWW_CONFIG_DIR}/assets/icons/battery/battery-4.svg" :
            EWW_BATTERY.BAT1.capacity >= 66 ? "${EWW_CONFIG_DIR}/assets/icons/battery/battery-3.svg" :
            EWW_BATTERY.BAT1.capacity >= 33 ? "${EWW_CONFIG_DIR}/assets/icons/battery/battery-2.svg" :
            EWW_BATTERY.BAT1.capacity >= 10 ? "${EWW_CONFIG_DIR}/assets/icons/battery/battery-1.svg" :
            "${EWW_CONFIG_DIR}/assets/icons/battery/battery-danger.svg"
            }
        )
        (label :text "${EWW_BATTERY.BAT1.capacity}%")
    )
)

(defwidget panel_notification []
    (button
        :class "notification_button"
        :onclick "${EWW_CONFIG_DIR}/scripts/launcher.sh notification"
        (image :path "${EWW_CONFIG_DIR}/assets/icons/notification.svg")
    )
)

(defwidget bar []
    (box
        :class "center_box"
        (box
            :class "left_box"
            :valign "start"
            :halign "start"
            :space-evenly false
            (panel_launcher)
            (panel_workspaces)
        )
        (box
            :class "right_box"
            :valign "start"
            :halign "end" 
            :space-evenly false
            (panel_clock)
            (panel_battery)
            (panel_notification)
        )
    )
)
