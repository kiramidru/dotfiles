(defwindow bar
    :monitor 0
    :stacking "fg"
    :exclusive true
    :windowtype "dock"
    :geometry (geometry :width "100%"
                        :height "3%"
                        :anchor "top center")(bar)
)

(defwindow notch
    :monitor 0
    :stacking "fg"
    :windowtype "utility"
    :geometry (geometry
        :y "-40px"
        :width "30%"
        :height "3%"
        :anchor "top center")(notch)
)
